<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/author_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingTop="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_3">


        <com.onexzgj.ppjoke.view.PPImageView
            android:id="@+id/iv_dh_author_avatar"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/splash"></com.onexzgj.ppjoke.view.PPImageView>

        <TextView
            android:id="@+id/tv_dh_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_3"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/iv_dh_author_avatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="神秘的jetpack"></TextView>

        <TextView
            android:id="@+id/tv_dh_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_10"
            android:textStyle="normal"
            app:layout_constraintLeft_toRightOf="@+id/iv_dh_author_avatar"
            app:layout_constraintTop_toBottomOf="@+id/tv_dh_author_name"
            tools:text="3天前"></TextView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dh_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:backgroundTint="@color/color_theme"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:text="@string/unfollow"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_14"
            app:backgroundTint="@color/color_theme"
            app:cornerRadius="@dimen/dp_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/color_white"
            app:strokeWidth="1dp"
            tools:text="已关注" />

</androidx.constraintlayout.widget.ConstraintLayout>